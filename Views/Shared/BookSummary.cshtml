@model Book


<div class="card card-outline-primary m-1 p-1 shadow ">
    <div class="bg-faded p-1">
        <h4 class="text-uppercase">
            Title: @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                Price: @Model.Price
            </span>
        </h4>
        <p>Author: @Model.Author</p>
        <p>Publisher: @Model.Publisher</p>
        <p>ISBN: @Model.ISBN</p>
        <p>Classification: @Model.Classification</p>
        <p>Category: @Model.Category</p>
        <p>Number of Pages: @Model.NumPages</p>
    </div>

    <form id="@Model.BookId" asp-page="/Donate" method="post">
        <input type="hidden" asp-for="BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>

</div>
