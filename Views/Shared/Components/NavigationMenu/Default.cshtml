@model IEnumerable<string>

<!-- html and razor code for the side nav to filter by category-->

<a class=" btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Home" asp-route-category="">
    Home
</a>

@foreach (string category in Model)
{
    <a class="btn btn-block @(category == ViewBag.SelectedType ? "btn-primary" : "btn-outline-secondary" )" 
       asp-action="Index" asp-controller="Home" 
       asp-route-category="@category" asp-route-page="1">
        @category
    </a>
}